{
  "extends": ["tslint:latest", "@ethanresnick/tslint-rules", "tslint-sonarts"],
  "rulesDirectory": ["vrsource-tslint-rules/rules"],
  "rules": {
    // Custom rules

    // from vrsource-tslint-rules
    "prefer-literal": [true, "object", "array"],

    // from sonar-ts, just customizing the built-in config we're extending,
    // which already turns on a bunch of rules. I'm a bit worried about how long
    // linting is beginning to take, so I may even turn off some rules that may
    // be good ideas but seem really unlikely to be hit.
    "cognitive-complexity": [true], // see https://www.sonarsource.com/docs/CognitiveComplexity.pdf
    "max-union-size": [true, 3],
    "no-big-function": [true, 125],
    "no-commented-code": false,
    "no-in-misuse": true,
    "no-nested-incdec": true,
    "no-redundant-parentheses": false,
    "no-redundant-jump": true,
    "no-return-type-any": false,
    "no-same-line-conditional": true,
    "no-undefined-argument": true,
    "prefer-default-last": true,

    // Standard TSlint Rules
    "adjacent-overload-signatures": true,
    "no-empty-interface": true,
    "no-empty": [true, "allow-empty-functions"],
    "no-internal-module": true,
    "no-namespace": [true, "allow-declarations"],
    "no-var-requires": true,
    "no-mergeable-namespace": true,
    "no-reference": true,
    "no-non-null-assertion": true,
    "no-string-literal": true,
    "typedef": [true, "property-declaration", "member-variable-declaration"],
    "unified-signatures": false,
    "array-type": false,
    "interface-over-type-literal": false,
    "strict-type-predicates": false,
    "no-misused-new": true,
    "ban-types": [true, ["String", "Use 'string' instead."], ["Object"]],
    "ban-comma-operator": true,

    "curly": true,
    "forin": true,
    "prefer-for-of": true,
    "prefer-const": true,
    "label-position": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "use-isnan": true,
    "await-promise": true,
    "variable-name": [true, "ban-keywords"],
    "only-arrow-functions": false,
    "cyclomatic-complexity": true,
    "return-undefined": true,
    "deprecation": true,
    "prefer-switch": true,
    "prefer-object-spread": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "use-default-type-parameter": true,

    "no-duplicate-variable": true,
    "no-var-keyword": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-for-in-array": true,
    "no-void-expression": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-console": true,
    "no-eval": true,
    "no-invalid-this": true,
    "no-shadowed-variable": [true, { "temporalDeadZone": false }],
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-string-throw": true,
    "no-magic-numbers": false,
    "no-duplicate-super": true,
    "no-unnecessary-callback-wrapper": true,
    "no-invalid-template-strings": true,
    "no-sparse-arrays": true,
    "no-inferred-empty-object-type": true,
    "no-unbound-method": [true, "ignore-static"],
    "no-this-assignment": true,
    "no-submodule-imports": true,
    "no-parameter-reassignment": true,
    "no-implicit-dependencies": true,
    "no-duplicate-switch-case": true,
    "no-return-await": true,
    "no-dynamic-delete": true,
    "prefer-while": true,

    "completed-docs": [true, "functions"],
    "interface-name": [true, "never-prefix"],
    "member-access": [true, "check-accessor", "check-parameter-property"],
    "class-name": true,
    "jsdoc-format": [true, "check-multiline-start"],
    "new-parens": true,
    "max-file-line-count": [true, 500],
    "no-trailing-whitespace": [true, "ignore-template-strings"],
    "no-unnecessary-initializer": true,
    "no-require-imports": false,
    "no-null-keyword": false,
    "no-unnecessary-qualifier": false,
    "object-literal-sort-keys": false,
    "trailing-comma": false,

    "max-line-length": false,
    "eofline": false,
    "indent": false,
    "align": false,
    "arrow-parens": false,
    "arrow-return-shorthand": false,
    "comment-format": false,
    "no-angle-bracket-type-assertion": false,
    "no-consecutive-blank-lines": false,
    "no-parameter-properties": false,
    "object-literal-key-quotes": false,
    "object-literal-shorthand": false,
    "one-line": false,
    "one-variable-per-declaration": false,
    "ordered-imports": false,
    "quotemark": false,
    "semicolon": false,
    "whitespace": false,
    "space-before-function-paren": false,
    "import-spacing": false,
    "newline-before-return": false,
    "prefer-template": false,
    "number-literal-format": false,
    "no-irregular-whitespace": false
  }
}
